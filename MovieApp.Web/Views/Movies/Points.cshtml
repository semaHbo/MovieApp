@model Movie

<div class="card">
    <div class="row">
        <div class="col-md-3">
            <img src="/img/@Model.ImageUrl" class="card-img" />
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h5 class="card-title"> @Model.Point</h5>
                <form asp-action="Point" method="post">
                    <input type="hidden" name="id" value="@Model.MovieId" />
                    <label for="point">See movie  point:</label>
                    <input type="number" name="rating" step="0.1" min="0" max="10" />
                    <button type="submit">Point</button>
                </form>
            </div>
        </div>
    </div>
</div>